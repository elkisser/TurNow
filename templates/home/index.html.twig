{% block javascript %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Precios base por plan
        const planPrices = {
            basico: 10000,
            profesional: 15000,
            empresa: 40000
        };
        
        // Descuentos por período
        const discounts = {
            trimestral: 0.05,    // 5%
            semestral: 0.10,     // 10%
            anual: 0.20,         // 20%
            bianual: 0.30        // 30%
        };
        
        // Períodos en meses
        const periods = {
            trimestral: 3,
            semestral: 6,
            anual: 12,
            bianual: 24
        };
        
        let currentPeriod = 'trimestral';
        
        // Manejar selección de período
        document.querySelectorAll('.subscription-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                // Remover clase active de todos los botones
                document.querySelectorAll('.subscription-btn').forEach(b => b.classList.remove('active'));
                
                // Agregar clase active al botón clickeado
                this.classList.add('active');
                
                // Actualizar período actual
                currentPeriod = this.dataset.period;
                
                // Actualizar precios
                updatePrices();
            });
        });
        
        // Actualizar precios según el período seleccionado
        function updatePrices() {
            const discount = discounts[currentPeriod];
            const months = periods[currentPeriod];
            
            document.querySelectorAll('.price-amount').forEach(priceEl => {
                const basePrice = parseInt(priceEl.dataset.base);
                const discountedPrice = Math.round(basePrice * (1 - discount));
                const totalPrice = discountedPrice * months;
                
                priceEl.textContent = `$${discountedPrice.toLocaleString()}`;
                
                // Actualizar período
                const periodEl = priceEl.nextElementSibling;
                periodEl.textContent = `/mes (${months} meses)`;
            });
        }
        
        // Seleccionar plan y mostrar mensaje
        function selectPlan(planName, basePrice) {
            const discount = discounts[currentPeriod];
            const months = periods[currentPeriod];
            const discountedPrice = Math.round(basePrice * (1 - discount));
            const totalPrice = discountedPrice * months;
            
            // Actualizar mensaje de éxito
            document.getElementById('selectedPlanName').textContent = planName.charAt(0).toUpperCase() + planName.slice(1);
            document.getElementById('selectedPeriod').textContent = currentPeriod;
            document.getElementById('totalPrice').textContent = `$${totalPrice.toLocaleString()}`;
            
            // Mostrar mensaje
            const successMessage = document.getElementById('successMessage');
            successMessage.classList.add('show');
            
            // Scroll al mensaje
            successMessage.scrollIntoView({ behavior: 'smooth' });
            
            // Crear mensaje para WhatsApp
            const whatsappMessage = `¡Hola! Me interesa contratar el plan ${planName.charAt(0).toUpperCase() + planName.slice(1)} de TurNow con suscripción ${currentPeriod} (${months} meses). Precio: $${discountedPrice.toLocaleString()}/mes. Total: $${totalPrice.toLocaleString()}. ¿Podrías ayudarme con la contratación?`;
            
            // Redirigir a WhatsApp después de 3 segundos
            setTimeout(() => {
                const whatsappUrl = `https://wa.me/543435086453?text=${encodeURIComponent(whatsappMessage)}`;
                window.open(whatsappUrl, '_blank');
            }, 3000);
        }
        
        // Smooth scrolling para los enlaces
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Navbar scroll effect
        window.addEventListener('scroll', function() {
            const navbar = document.querySelector('.navbar-premium');
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
        
        // Inicializar precios
        updatePrices();
    </script>
{% endblock %}
