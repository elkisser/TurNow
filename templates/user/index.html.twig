{% extends 'base.html.twig' %}

{% block title %}TurNow - Mi Cuenta{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        :root {
            --primary: #6c63ff;
            --secondary: #ff6584;
            --accent: #42b883;
            --dark: #2c2c6c;
            --light: #f8f9fa;
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
            --info: #17a2b8;
        }
        
        .user-dashboard {
            min-height: 100vh;
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 2rem 0;
        }
        
        .user-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
            border: none;
            transition: all 0.3s ease;
        }
        
        .user-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }
        
        .plan-badge {
            padding: 12px 24px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: inline-block;
            margin: 1rem 0;
        }
        
        .plan-basico {
            background: linear-gradient(135deg, rgba(108, 99, 255, 0.15) 0%, rgba(108, 99, 255, 0.05) 100%);
            color: var(--primary);
            border: 2px solid rgba(108, 99, 255, 0.2);
        }
        
        .plan-profesional {
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.15) 0%, rgba(255, 193, 7, 0.05) 100%);
            color: var(--warning);
            border: 2px solid rgba(255, 193, 7, 0.2);
        }
        
        .plan-empresa {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.15) 0%, rgba(40, 167, 69, 0.05) 100%);
            color: var(--success);
            border: 2px solid rgba(40, 167, 69, 0.2);
        }
        
        .status-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .status-activa {
            background: rgba(40, 167, 69, 0.1);
            color: var(--success);
            border: 1px solid rgba(40, 167, 69, 0.2);
        }
        
        .status-proxima-vencer {
            background: rgba(255, 193, 7, 0.1);
            color: var(--warning);
            border: 1px solid rgba(255, 193, 7, 0.2);
        }
        
        .status-vencida {
            background: rgba(220, 53, 69, 0.1);
            color: var(--danger);
            border: 1px solid rgba(220, 53, 69, 0.2);
        }
        
        .progress {
            height: 12px;
            border-radius: 10px;
            background: #f1f1f1;
            overflow: hidden;
            margin: 1rem 0;
        }
        
        .progress-bar {
            border-radius: 10px;
            transition: width 0.3s ease;
        }
        
        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #fff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }
        
        .feature-list {
            list-style: none;
            padding: 0;
        }
        
        .feature-list li {
            padding: 0.5rem 0;
            border-bottom: 1px solid #f1f1f1;
            display: flex;
            align-items: center;
        }
        
        .feature-list li:last-child {
            border-bottom: none;
        }
        
        .feature-list li i {
            margin-right: 0.75rem;
            color: var(--primary);
            width: 20px;
        }
        
        .btn-logout {
            background: linear-gradient(135deg, var(--danger), #b02a37);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 24px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }
        
        .btn-logout:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(220, 53, 69, 0.3);
            color: white;
        }
    </style>
{% endblock %}

{% block content %}
<div class="user-dashboard">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Información del Usuario -->
                <div class="user-card">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <img src="https://ui-avatars.com/api/?name={{ app.user.nombre|url_encode }}&background=6c63ff&color=fff&size=200" 
                                 class="user-avatar" alt="Avatar">
                        </div>
                        <div class="col-md-9">
                            <h2 class="mb-2">{{ app.user.nombre }}</h2>
                            <p class="text-muted mb-3">{{ app.user.email }}</p>
                            
                            {% if suscripcion_activa %}
                                <div class="plan-badge plan-{{ suscripcion_activa.tipo }}">
                                    Plan {{ suscripcion_activa.tipo|capitalize }}
                                </div>
                                
                                <div class="d-flex align-items-center mb-2">
                                    <span class="status-badge status-{{ suscripcion_activa.getEstado() }}">
                                        {{ suscripcion_activa.getEstado()|replace({'_': ' '})|title }}
                                    </span>
                                </div>
                            {% else %}
                                <div class="plan-badge plan-basico">
                                    Sin Plan Activo
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Información de Suscripción -->
                {% if suscripcion_activa %}
                <div class="user-card">
                    <h4 class="mb-4">
                        <i class="fas fa-credit-card me-2"></i>Información de Suscripción
                    </h4>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Tipo de Plan</h6>
                            <p class="fw-bold">{{ suscripcion_activa.tipo|capitalize }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Fecha de Inicio</h6>
                            <p class="fw-bold">{{ suscripcion_activa.fechaInicio|date('d/m/Y') }}</p>
                        </div>
                    </div>
                    
                    {% if suscripcion_activa.fechaFin %}
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted">Fecha de Vencimiento</h6>
                            <p class="fw-bold">{{ suscripcion_activa.fechaFin|date('d/m/Y') }}</p>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Días Restantes</h6>
                            <p class="fw-bold">{{ suscripcion_activa.getDiasRestantes() }} días</p>
                        </div>
                    </div>
                    
                    <!-- Barra de Progreso -->
                    <div class="mt-3">
                        <h6 class="text-muted">Progreso de Suscripción</h6>
                        {% set diasRestantes = suscripcion_activa.getDiasRestantes() %}
                        {% set diasTotales = suscripcion_activa.fechaInicio.diff(suscripcion_activa.fechaFin).days %}
                        {% set porcentaje = ((diasTotales - diasRestantes) / diasTotales * 100)|round %}
                        
                        <div class="progress">
                            <div class="progress-bar 
                                {% if diasRestantes > 30 %}bg-success
                                {% elseif diasRestantes > 7 %}bg-warning
                                {% else %}bg-danger
                                {% endif %}" 
                                style="width: {{ porcentaje }}%">
                            </div>
                        </div>
                        <small class="text-muted">{{ porcentaje }}% completado</small>
                    </div>
                    {% else %}
                    <div class="row">
                        <div class="col-md-12">
                            <h6 class="text-muted">Tipo de Suscripción</h6>
                            <p class="fw-bold text-success">Permanente</p>
                        </div>
                    </div>
                    {% endif %}
                </div>

                <!-- Características del Plan -->
                <div class="user-card">
                    <h4 class="mb-4">
                        <i class="fas fa-star me-2"></i>Características de tu Plan
                    </h4>
                    
                    <ul class="feature-list">
                        {% if suscripcion_activa.tipo == 'basico' %}
                            <li><i class="fas fa-check"></i> Acceso básico a la plataforma</li>
                            <li><i class="fas fa-check"></i> Hasta 5 servicios</li>
                            <li><i class="fas fa-check"></i> Soporte por email</li>
                            <li><i class="fas fa-check"></i> Actualizaciones mensuales</li>
                        {% elseif suscripcion_activa.tipo == 'profesional' %}
                            <li><i class="fas fa-check"></i> Todas las características del plan básico</li>
                            <li><i class="fas fa-check"></i> Hasta 20 servicios</li>
                            <li><i class="fas fa-check"></i> Soporte prioritario</li>
                            <li><i class="fas fa-check"></i> Actualizaciones semanales</li>
                            <li><i class="fas fa-check"></i> Análisis avanzados</li>
                        {% elseif suscripcion_activa.tipo == 'empresa' %}
                            <li><i class="fas fa-check"></i> Todas las características del plan profesional</li>
                            <li><i class="fas fa-check"></i> Servicios ilimitados</li>
                            <li><i class="fas fa-check"></i> Soporte 24/7</li>
                            <li><i class="fas fa-check"></i> Actualizaciones diarias</li>
                            <li><i class="fas fa-check"></i> API personalizada</li>
                            <li><i class="fas fa-check"></i> Integración con sistemas externos</li>
                        {% endif %}
                    </ul>
                </div>
                {% endif %}

                <!-- Acciones -->
                <div class="user-card text-center">
                    <h4 class="mb-4">Acciones</h4>
                    <div class="d-flex gap-3 justify-content-center">
                        <a href="{{ path('app_logout') }}" class="btn-logout">
                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
