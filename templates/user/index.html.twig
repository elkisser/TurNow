{% extends 'base.html.twig' %}

{% block title %}TurNow - Mi Cuenta{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        :root {
            --primary: #6c63ff;
            --secondary: #ff6584;
            --accent: #42b883;
            --dark: #2c2c6c;
            --light: #f8f9fa;
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
            --info: #17a2b8;
        }
        
        .sidebar {
            background: linear-gradient(180deg, var(--dark) 0%, #1a1a4c 100%);
            color: white;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            padding-top: 80px;
            transition: all 0.3s ease;
            z-index: 1000;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 14px 25px;
            margin: 6px 15px;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-weight: 500;
            position: relative;
            overflow: hidden;
        }
        
        .sidebar .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: all 0.5s ease;
        }
        
        .sidebar .nav-link:hover::before,
        .sidebar .nav-link.active::before {
            left: 100%;
        }
        
        .sidebar .nav-link:hover, 
        .sidebar .nav-link.active {
            color: white;
            background: rgba(255, 255, 255, 0.15);
            transform: translateX(5px);
        }
        
        .sidebar .nav-link i {
            margin-right: 12px;
            width: 20px;
            text-align: center;
            font-size: 18px;
        }
        
        .sidebar-brand {
            padding: 20px 25px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
        }
        
        .main-content {
            margin-left: 280px;
            padding: 30px;
            padding-top: 100px;
            min-height: 100vh;
            background: #f8fafc;
        }
        
        .navbar-user {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            padding: 18px 30px;
            position: fixed;
            top: 0;
            right: 0;
            left: 280px;
            z-index: 999;
            transition: all 0.3s ease;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .navbar-actions {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .navbar-profile {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 15px;
            background: rgba(108, 99, 255, 0.1);
            border-radius: 50px;
            color: var(--primary);
            font-weight: 600;
        }
        
        .navbar-profile img {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            object-fit: cover;
        }
        
        .btn-logout {
            background: rgba(220, 53, 69, 0.1);
            color: var(--danger);
            border: none;
            border-radius: 50px;
            padding: 8px 15px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .btn-logout:hover {
            background: var(--danger);
            color: white;
        }
        
        .stat-card {
            background: white;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.4s ease;
            height: 100%;
            border: none;
            position: relative;
            overflow: hidden;
        }
        
        .stat-card::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(108, 99, 255, 0.03) 0%, rgba(255, 101, 132, 0.03) 100%);
            z-index: 0;
        }
        
        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        
        .stat-card.warning {
            border-left: 4px solid var(--warning);
        }
        
        .stat-card.danger {
            border-left: 4px solid var(--danger);
        }
        
        .stat-card.success {
            border-left: 4px solid var(--success);
        }
        
        .stat-card.premium {
            border-left: 4px solid var(--primary);
        }
        
        .stat-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            margin-bottom: 15px;
            box-shadow: 0 5px 15px rgba(108, 99, 255, 0.3);
        }
        
        .stat-card.warning .stat-icon {
            background: linear-gradient(135deg, var(--warning) 0%, #ff8c00 100%);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        }
        
        .stat-card.danger .stat-icon {
            background: linear-gradient(135deg, var(--danger) 0%, #b02a37 100%);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
        }
        
        .stat-card.success .stat-icon {
            background: linear-gradient(135deg, var(--success) 0%, #1e7e34 100%);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }
        
        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.4s ease;
            overflow: hidden;
        }
        
        .card:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            background: white;
            border-bottom: 1px solid #f1f1f1;
            padding: 20px 25px;
            border-radius: 20px 20px 0 0 !important;
            font-weight: 600;
            font-size: 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .user-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            padding: 2rem;
            margin-bottom: 2rem;
            border: none;
            transition: all 0.3s ease;
        }
        
        .user-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        
        .plan-badge {
            padding: 12px 24px;
            border-radius: 25px;
            font-weight: 700;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: inline-block;
            margin: 1rem 0;
        }
        
        .plan-basico {
            background: linear-gradient(135deg, rgba(108, 99, 255, 0.15) 0%, rgba(108, 99, 255, 0.05) 100%);
            color: var(--primary);
            border: 2px solid rgba(108, 99, 255, 0.2);
        }
        
        .plan-profesional {
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.15) 0%, rgba(255, 193, 7, 0.05) 100%);
            color: var(--warning);
            border: 2px solid rgba(255, 193, 7, 0.2);
        }
        
        .plan-empresa {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.15) 0%, rgba(40, 167, 69, 0.05) 100%);
            color: var(--success);
            border: 2px solid rgba(40, 167, 69, 0.2);
        }
        
        .status-badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .status-activa {
            background: rgba(40, 167, 69, 0.1);
            color: var(--success);
            border: 1px solid rgba(40, 167, 69, 0.2);
        }
        
        .status-proxima-vencer {
            background: rgba(255, 193, 7, 0.1);
            color: var(--warning);
            border: 1px solid rgba(255, 193, 7, 0.2);
        }
        
        .status-vencida {
            background: rgba(220, 53, 69, 0.1);
            color: var(--danger);
            border: 1px solid rgba(220, 53, 69, 0.2);
        }
        
        .progress {
            height: 12px;
            border-radius: 10px;
            background: #f1f1f1;
            overflow: hidden;
            margin: 1rem 0;
        }
        
        .progress-bar {
            border-radius: 10px;
            transition: width 0.3s ease;
        }
        
        .user-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #fff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }
        
        .feature-list {
            list-style: none;
            padding: 0;
        }
        
        .feature-list li {
            padding: 0.5rem 0;
            border-bottom: 1px solid #f1f1f1;
            display: flex;
            align-items: center;
        }
        
        .feature-list li:last-child {
            border-bottom: none;
        }
        
        .feature-list li i {
            margin-right: 0.75rem;
            color: var(--primary);
            width: 20px;
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
            background: #f8f9fa;
            padding: 15px;
            border-bottom: 2px solid #e9ecef;
        }
        
        .table td {
            padding: 15px;
            vertical-align: middle;
            border-color: #f1f1f1;
        }
        
        .table tr {
            transition: all 0.3s ease;
        }
        
        .table tr:hover {
            background-color: #f8fafc;
            transform: translateX(5px);
        }
        
        .btn-action {
            width: 38px;
            height: 38px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            cursor: pointer;
            text-decoration: none;
        }
        
        .btn-edit {
            background: linear-gradient(135deg, rgba(58, 134, 255, 0.15) 0%, rgba(58, 134, 255, 0.05) 100%);
            color: #3a86ff;
            border: 1px solid rgba(58, 134, 255, 0.2);
        }
        
        .btn-edit:hover {
            background: #3a86ff;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(58, 134, 255, 0.3);
        }
        
        .btn-delete {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.15) 0%, rgba(220, 53, 69, 0.05) 100%);
            color: var(--danger);
            border: 1px solid rgba(220, 53, 69, 0.2);
        }
        
        .btn-delete:hover {
            background: var(--danger);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(220, 53, 69, 0.3);
        }
        
        .btn-premium {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(108, 99, 255, 0.3);
            text-decoration: none;
            display: inline-block;
        }
        
        .btn-premium:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(108, 99, 255, 0.4);
            color: white;
        }
        
        .subscription-days {
            font-weight: 700;
            font-size: 14px;
        }
        
        .days-warning {
            color: var(--warning);
        }
        
        .days-danger {
            color: var(--danger);
        }
        
        .days-success {
            color: var(--success);
        }
        
        @media (max-width: 992px) {
            .sidebar {
                left: -280px;
            }
            
            .sidebar.active {
                left: 0;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .navbar-user {
                left: 0;
            }
            
            .sidebar-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 999;
            }
            
            .sidebar-overlay.active {
                display: block;
            }
        }
        
        .floating-notification {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: white;
            border-radius: 15px;
            padding: 15px 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            z-index: 1000;
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.5s ease;
        }
        
        .floating-notification.show {
            transform: translateY(0);
            opacity: 1;
        }
        
        .notification-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--success);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 18px;
        }
        
        .stats-change {
            font-size: 13px;
            font-weight: 600;
            display: flex;
            align-items: center;
        }
        
        .stats-change.positive {
            color: var(--success);
        }
        
        .stats-change.negative {
            color: var(--danger);
        }
        
        .service-avatar {
            width: 45px;
            height: 45px;
            border-radius: 10px;
            object-fit: cover;
            border: 3px solid #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .empty-state {
            text-align: center;
            padding: 40px 20px;
            color: #6c757d;
        }
        
        .empty-state i {
            font-size: 48px;
            margin-bottom: 15px;
            color: #dee2e6;
        }
        
        .btn-outline-primary {
            border: 1px solid var(--primary);
            color: var(--primary);
            border-radius: 12px;
            padding: 10px 20px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: block;
            text-align: left;
        }
        
        .btn-outline-primary:hover {
            background: var(--primary);
            color: white;
        }
        
        .btn-outline-danger {
            border: 1px solid var(--danger);
            color: var(--danger);
            border-radius: 12px;
            padding: 10px 20px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: block;
            text-align: left;
        }
        
        .btn-outline-danger:hover {
            background: var(--danger);
            color: white;
        }
    </style>
{% endblock %}

{% block content %}
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay"></div>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <h4 class="text-white mb-0">TurNow</h4>
            <p class="text-white-50 small mb-0">Panel de Usuario</p>
        </div>
        
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="{{ path('app_user') }}">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('servicios') }}">
                    <i class="fas fa-concierge-bell"></i> Mis Servicios
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-credit-card"></i> Mi Suscripción
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-chart-bar"></i> Estadísticas
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-cog"></i> Configuración
                </a>
            </li>
        </ul>
    </div>

    <!-- Navbar -->
    <nav class="navbar-user">
        <div class="d-flex align-items-center">
            <button class="btn btn-sm btn-outline-primary d-lg-none me-3" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <h5 class="mb-0">Mi Dashboard</h5>
        </div>
        
        <div class="navbar-actions">
            <div class="navbar-profile">
                <img src="https://ui-avatars.com/api/?name={{ app.user.nombre|url_encode }}&background=6c63ff&color=fff" alt="{{ app.user.nombre }}">
                <span>{{ app.user.nombre }}</span>
            </div>
            <a href="{{ path('app_logout') }}" class="btn-logout">
                <i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Statistics Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stat-card premium">
                    <div class="stat-icon">
                        <i class="fas fa-concierge-bell"></i>
                    </div>
                    <div>
                        <h6 class="text-muted">Servicios Activos</h6>
                        <h3 class="mb-0">{{ servicios|length }}</h3>
                        <div class="stats-change positive">
                            <i class="fas fa-arrow-up me-1"></i> 
                            {% if suscripcion_activa %}
                                {% if suscripcion_activa.tipo == 'basico' %}
                                    {{ servicios|length }}/5 servicios
                                {% elseif suscripcion_activa.tipo == 'profesional' %}
                                    {{ servicios|length }}/20 servicios
                                {% else %}
                                    {{ servicios|length }} servicios
                                {% endif %}
                            {% else %}
                                {{ servicios|length }} servicios
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card success">
                    <div class="stat-icon">
                        <i class="fas fa-eye"></i>
                    </div>
                    <div>
                        <h6 class="text-muted">Visitas Totales</h6>
                        <h3 class="mb-0">
                            {% set total_visitas = 0 %}
                            {% for servicio in servicios %}
                                {% set total_visitas = total_visitas + (servicio.visitas ?? 0) %}
                            {% endfor %}
                            {{ total_visitas }}
                        </h3>
                        <div class="stats-change positive">
                            <i class="fas fa-arrow-up me-1"></i> 
                            {% if servicios|length > 0 %}
                                {{ (total_visitas / servicios|length)|round }} por servicio
                            {% else %}
                                0 por servicio
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card warning">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div>
                        <h6 class="text-muted">Días Restantes</h6>
                        <h3 class="mb-0">
                            {% if suscripcion_activa and suscripcion_activa.fechaFin %}
                                {{ suscripcion_activa.getDiasRestantes() }}
                            {% else %}
                                ∞
                            {% endif %}
                        </h3>
                        <div class="stats-change 
                            {% if suscripcion_activa and suscripcion_activa.fechaFin %}
                                {% if suscripcion_activa.getDiasRestantes() > 30 %}positive
                                {% elseif suscripcion_activa.getDiasRestantes() > 7 %}warning
                                {% else %}negative
                                {% endif %}
                            {% else %}positive
                            {% endif %}">
                            <i class="fas 
                                {% if suscripcion_activa and suscripcion_activa.fechaFin %}
                                    {% if suscripcion_activa.getDiasRestantes() > 30 %}fa-arrow-up
                                    {% else %}fa-clock
                                    {% endif %}
                                {% else %}fa-infinity
                                {% endif %} me-1"></i>
                            {% if suscripcion_activa and suscripcion_activa.fechaFin %}
                                {{ (suscripcion_activa.getDiasRestantes() / 30 * 100)|round }}% del período
                            {% else %}
                                Suscripción permanente
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card 
                    {% if suscripcion_activa and suscripcion_activa.getEstado() == 'activa' %}success
                    {% elseif suscripcion_activa and suscripcion_activa.getEstado() == 'proxima_vencer' %}warning
                    {% elseif suscripcion_activa and suscripcion_activa.getEstado() == 'vencida' %}danger
                    {% else %}danger
                    {% endif %}">
                    <div class="stat-icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <div>
                        <h6 class="text-muted">Estado Suscripción</h6>
                        <h3 class="mb-0">
                            {% if suscripcion_activa %}
                                {{ suscripcion_activa.getEstado()|replace({'_': ' '})|title }}
                            {% else %}
                                Inactiva
                            {% endif %}
                        </h3>
                        <div class="stats-change 
                            {% if suscripcion_activa and suscripcion_activa.getEstado() == 'activa' %}positive
                            {% else %}negative
                            {% endif %}">
                            <i class="fas 
                                {% if suscripcion_activa and suscripcion_activa.getEstado() == 'activa' %}fa-check
                                {% else %}fa-exclamation-triangle
                                {% endif %} me-1"></i>
                            {% if suscripcion_activa %}
                                Plan {{ suscripcion_activa.tipo|capitalize }}
                            {% else %}
                                Sin plan activo
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Información del Usuario -->
        <div class="row">
            <div class="col-lg-8">
                <!-- Información de Perfil -->
                <div class="user-card">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <img src="https://ui-avatars.com/api/?name={{ app.user.nombre|url_encode }}&background=6c63ff&color=fff&size=200" 
                                 class="user-avatar" alt="Avatar">
                        </div>
                        <div class="col-md-9">
                            <h2 class="mb-2">{{ app.user.nombre }}</h2>
                            <p class="text-muted mb-3">{{ app.user.email }}</p>
                            
                            {% if suscripcion_activa %}
                                <div class="plan-badge plan-{{ suscripcion_activa.tipo }}">
                                    Plan {{ suscripcion_activa.tipo|capitalize }}
                                </div>
                                
                                <div class="d-flex align-items-center mb-2">
                                    <span class="status-badge status-{{ suscripcion_activa.getEstado() }}">
                                        {{ suscripcion_activa.getEstado()|replace({'_': ' '})|title }}
                                    </span>
                                </div>
                            {% else %}
                                <div class="plan-badge plan-basico">
                                    Sin Plan Activo
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <!-- Mis Servicios -->
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Mis Servicios</h5>
                        <div>
                            <a href="{{ path('servicios') }}" class="btn btn-premium">
                                <i class="fas fa-plus me-2"></i>Nuevo Servicio
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        {% if servicios|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Servicio</th>
                                        <th>Visitas</th>
                                        <th>Estado</th>
                                        <th>Fecha Creación</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for servicio in servicios %}
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                {% if servicio.bannerUrl %}
                                                    <img src="{{ servicio.bannerUrl }}" class="service-avatar me-3" alt="{{ servicio.nombre }}">
                                                {% else %}
                                                    <div class="service-avatar me-3 bg-light d-flex align-items-center justify-content-center">
                                                        <i class="fas fa-image text-muted"></i>
                                                    </div>
                                                {% endif %}
                                                <div>
                                                    <h6 class="mb-0">{{ servicio.nombre }}</h6>
                                                    <small class="text-muted">
                                                        {% if servicio.descripcion %}
                                                            {{ servicio.descripcion|slice(0, 50) }}{% if servicio.descripcion|length > 50 %}...{% endif %}
                                                        {% else %}
                                                            Sin descripción
                                                        {% endif %}
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="fw-semibold">{{ servicio.visitas ?? 0 }}</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-success bg-opacity-10 text-success">Activo</span>
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                {% if servicio.fechaCreacion %}
                                                    {{ servicio.fechaCreacion|date('d/m/Y') }}
                                                {% else %}
                                                    Fecha no disponible
                                                {% endif %}
                                            </small>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <a href="{{ path('servicio_publico', {'slug': servicio.slug}) }}" class="btn btn-action btn-edit" target="_blank" title="Ver servicio">
                                                    <i class="fas fa-external-link-alt"></i>
                                                </a>
                                                <a href="#" class="btn btn-action btn-edit" title="Editar servicio">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="btn btn-action btn-delete" title="Eliminar servicio" onclick="confirmDelete('{{ servicio.nombre }}')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        {% else %}
                        <div class="empty-state">
                            <i class="fas fa-concierge-bell"></i>
                            <h5>No tienes servicios creados</h5>
                            <p class="text-muted">Comienza creando tu primer servicio para mostrar en la plataforma.</p>
                            <a href="{{ path('servicios') }}" class="btn btn-premium mt-3">
                                <i class="fas fa-plus me-2"></i>Crear Primer Servicio
                            </a>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <!-- Información de Suscripción -->
                {% if suscripcion_activa %}
                <div class="user-card">
                    <h4 class="mb-4">
                        <i class="fas fa-credit-card me-2"></i>Información de Suscripción
                    </h4>
                    
                    <div class="mb-3">
                        <h6 class="text-muted">Tipo de Plan</h6>
                        <p class="fw-bold">{{ suscripcion_activa.tipo|capitalize }}</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="text-muted">Fecha de Inicio</h6>
                        <p class="fw-bold">
                            {% if suscripcion_activa.fechaInicio %}
                                {{ suscripcion_activa.fechaInicio|date('d/m/Y') }}
                            {% else %}
                                No especificada
                            {% endif %}
                        </p>
                    </div>
                    
                    {% if suscripcion_activa.fechaFin %}
                    <div class="mb-3">
                        <h6 class="text-muted">Fecha de Vencimiento</h6>
                        <p class="fw-bold">{{ suscripcion_activa.fechaFin|date('d/m/Y') }}</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="text-muted">Días Restantes</h6>
                        <p class="fw-bold">{{ suscripcion_activa.getDiasRestantes() }} días</p>
                    </div>
                    
                    <!-- Barra de Progreso -->
                    <div class="mt-3">
                        <h6 class="text-muted">Progreso de Suscripción</h6>
                        {% set diasRestantes = suscripcion_activa.getDiasRestantes() %}
                        {% set diasTotales = suscripcion_activa.fechaInicio.diff(suscripcion_activa.fechaFin).days %}
                        {% set porcentaje = ((diasTotales - diasRestantes) / diasTotales * 100)|round %}
                        
                        <div class="progress">
                            <div class="progress-bar 
                                {% if diasRestantes > 30 %}bg-success
                                {% elseif diasRestantes > 7 %}bg-warning
                                {% else %}bg-danger
                                {% endif %}" 
                                style="width: {{ porcentaje }}%">
                            </div>
                        </div>
                        <small class="text-muted">{{ porcentaje }}% completado</small>
                    </div>
                    {% else %}
                    <div class="mb-3">
                        <h6 class="text-muted">Tipo de Suscripción</h6>
                        <p class="fw-bold text-success">Permanente</p>
                    </div>
                    {% endif %}
                </div>

                <!-- Características del Plan -->
                <div class="user-card">
                    <h4 class="mb-4">
                        <i class="fas fa-star me-2"></i>Características de tu Plan
                    </h4>
                    
                    <ul class="feature-list">
                        {% if suscripcion_activa.tipo == 'basico' %}
                            <li><i class="fas fa-check"></i> Acceso básico a la plataforma</li>
                            <li><i class="fas fa-check"></i> Hasta 5 servicios</li>
                            <li><i class="fas fa-check"></i> Soporte por email</li>
                            <li><i class="fas fa-check"></i> Actualizaciones mensuales</li>
                        {% elseif suscripcion_activa.tipo == 'profesional' %}
                            <li><i class="fas fa-check"></i> Todas las características del plan básico</li>
                            <li><i class="fas fa-check"></i> Hasta 20 servicios</li>
                            <li><i class="fas fa-check"></i> Soporte prioritario</li>
                            <li><i class="fas fa-check"></i> Actualizaciones semanales</li>
                            <li><i class="fas fa-check"></i> Análisis avanzados</li>
                        {% elseif suscripcion_activa.tipo == 'empresa' %}
                            <li><i class="fas fa-check"></i> Todas las características del plan profesional</li>
                            <li><i class="fas fa-check"></i> Servicios ilimitados</li>
                            <li><i class="fas fa-check"></i> Soporte 24/7</li>
                            <li><i class="fas fa-check"></i> Actualizaciones diarias</li>
                            <li><i class="fas fa-check"></i> API personalizada</li>
                            <li><i class="fas fa-check"></i> Integración con sistemas externos</li>
                        {% endif %}
                    </ul>
                    
                    <div class="mt-4 text-center">
                        <button class="btn btn-premium w-100">
                            <i class="fas fa-sync-alt me-2"></i>Renovar Suscripción
                        </button>
                    </div>
                </div>
                {% else %}
                <!-- Sin Suscripción Activa -->
                <div class="user-card text-center">
                    <div class="empty-state">
                        <i class="fas fa-credit-card"></i>
                        <h5>Sin Suscripción Activa</h5>
                        <p class="text-muted">Activa una suscripción para desbloquear todas las funcionalidades de TurNow.</p>
                        <button class="btn btn-premium mt-3">
                            <i class="fas fa-crown me-2"></i>Ver Planes Disponibles
                        </button>
                    </div>
                </div>
                {% endif %}

                <!-- Acciones Rápidas -->
                <div class="user-card">
                    <h4 class="mb-4">Acciones Rápidas</h4>
                    <div class="d-grid gap-2">
                        <a href="{{ path('servicios') }}" class="btn btn-outline-primary text-start">
                            <i class="fas fa-plus me-2"></i>Crear Nuevo Servicio
                        </a>
                        <button class="btn btn-outline-primary text-start">
                            <i class="fas fa-chart-bar me-2"></i>Ver Estadísticas
                        </button>
                        <button class="btn btn-outline-primary text-start">
                            <i class="fas fa-cog me-2"></i>Configurar Perfil
                        </button>
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger text-start">
                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Floating Notification -->
    <div class="floating-notification" id="successNotification">
        <div class="notification-icon">
            <i class="fas fa-check"></i>
        </div>
        <div>
            <h6 class="mb-0">Operación exitosa</h6>
            <p class="mb-0 small" id="notificationMessage">Los cambios se han guardado correctamente</p>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
            document.querySelector('.sidebar-overlay').classList.toggle('active');
        });
        
        // Close sidebar when clicking overlay
        document.querySelector('.sidebar-overlay').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.remove('active');
            this.classList.remove('active');
        });
        
        // Show notification function
        function showNotification(message) {
            const notification = document.getElementById('successNotification');
            document.getElementById('notificationMessage').textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        // Confirm delete function
        function confirmDelete(serviceName) {
            if (confirm(`¿Estás seguro de que deseas eliminar el servicio "${serviceName}"? Esta acción no se puede deshacer.`)) {
                showNotification(`Servicio "${serviceName}" eliminado correctamente`);
                // Aquí iría la llamada AJAX para eliminar el servicio
            }
        }
        
        // Check for flash messages and show notification
        {% for message in app.flashes('success') %}
            showNotification('{{ message }}');
        {% endfor %}
        
        {% for message in app.flashes('error') %}
            showNotification('{{ message }}');
        {% endfor %}
        
        // Service actions
        document.querySelectorAll('.btn-action.btn-edit').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (!this.getAttribute('href') || this.getAttribute('href') === '#') {
                    e.preventDefault();
                    const serviceName = this.closest('tr').querySelector('h6').textContent;
                    showNotification(`Editando servicio: ${serviceName}`);
                }
            });
        });
        
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[title]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
{% endblock %}