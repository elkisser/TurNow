    .gradient-2 { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
    .gradient-3 { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
    .gradient-4 { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
    
    .text-gradient-1 { color: #667eea; }
    .text-gradient-2 { color: #f5576c; }
    .text-gradient-3 { color: #4facfe; }
    .text-gradient-4 { color: #43e97b; }
    
    /* Tutorial Styles */
    .tutorial-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.9);
        z-index: 9999;
        display: none;
        align-items: center;
        justify-content: center;
    }
    
    .tutorial-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 20px;
        padding: 2.5rem;
        max-width: 500px;
        box-shadow: 0 25px 50px rgba(0,0,0,0.5);
        color: white;
        position: relative;
        overflow: hidden;
    }
    
    .tutorial-step {
        display: none;
    }
    
    .tutorial-step.active {
        display: block;
    }
    
    .tutorial-navigation {
        display: flex;
        justify-content: space-between;
        margin-top: 2rem;
        gap: 1rem;
    }
    
    .tutorial-progress {
        display: flex;
        justify-content: center;
        margin-bottom: 1.5rem;
        gap: 0.5rem;
    }
    
    .progress-dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background: rgba(255,255,255,0.3);
        transition: all 0.3s ease;
    }
    
    .progress-dot.active {
        background: white;
        transform: scale(1.2);
    }
    
    .tutorial-highlight {
        position: absolute;
        border: 3px solid #667eea;
        border-radius: 15px;
        background: rgba(102, 126, 234, 0.1);
        z-index: 10000;
        pointer-events: none;
        box-shadow: 0 0 0 9999px rgba(0,0,0,0.7);
    }

    @media (max-width: 768px) {
        .sidebar {
            width: 100%;
            left: -100%;
            transition: left 0.3s ease;
        }
        
