{% extends 'base.html.twig' %}

{% block title %}TurNow - Dashboard Administrador{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        :root {
            --primary: #6c63ff;
            --secondary: #ff6584;
            --accent: #42b883;
            --dark: #2c2c6c;
            --light: #f8f9fa;
            --success: #28a745;
            --warning: #ffc107;
            --danger: #dc3545;
            --info: #17a2b8;
            --gold: #ffd700;
            --silver: #c0c0c0;
            --bronze: #cd7f32;
        }
        
        .sidebar {
            background: linear-gradient(180deg, var(--dark) 0%, #1a1a4c 100%);
            color: white;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 280px;
            padding-top: 80px;
            transition: all 0.3s ease;
            z-index: 1000;
            box-shadow: 5px 0 15px rgba(0, 0, 0, 0.1);
        }
        
        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 14px 25px;
            margin: 6px 15px;
            border-radius: 12px;
            transition: all 0.3s ease;
            font-weight: 500;
            position: relative;
            overflow: hidden;
        }
        
        .sidebar .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
            transition: all 0.5s ease;
        }
        
        .sidebar .nav-link:hover::before,
        .sidebar .nav-link.active::before {
            left: 100%;
        }
        
        .sidebar .nav-link:hover, 
        .sidebar .nav-link.active {
            color: white;
            background: rgba(255, 255, 255, 0.15);
            transform: translateX(5px);
        }
        
        .sidebar .nav-link i {
            margin-right: 12px;
            width: 20px;
            text-align: center;
            font-size: 18px;
        }
        
        .sidebar-brand {
            padding: 20px 25px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
        }
        
        .main-content {
            margin-left: 280px;
            padding: 30px;
            padding-top: 100px;
            min-height: 100vh;
            background: #f8fafc;
        }
        
        .navbar-admin {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            padding: 18px 30px;
            position: fixed;
            top: 0;
            right: 0;
            left: 280px;
            z-index: 999;
            transition: all 0.3s ease;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .navbar-actions {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .navbar-user {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 8px 15px;
            background: rgba(108, 99, 255, 0.1);
            border-radius: 50px;
            color: var(--primary);
            font-weight: 600;
        }
        
        .navbar-user img {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            object-fit: cover;
        }
        
        .btn-logout {
            background: rgba(220, 53, 69, 0.1);
            color: var(--danger);
            border: none;
            border-radius: 50px;
            padding: 8px 15px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }
        
        .btn-logout:hover {
            background: var(--danger);
            color: white;
        }
        
        .stat-card {
            background: white;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.4s ease;
            height: 100%;
            border: none;
            position: relative;
            overflow: hidden;
        }
        
        .stat-card::after {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(108, 99, 255, 0.03) 0%, rgba(255, 101, 132, 0.03) 100%);
            z-index: 0;
        }
        
        .stat-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        
        .stat-card.warning {
            border-left: 4px solid var(--warning);
        }
        
        .stat-card.danger {
            border-left: 4px solid var(--danger);
        }
        
        .stat-card.success {
            border-left: 4px solid var(--success);
        }
        
        .stat-card.premium {
            border-left: 4px solid var(--primary);
        }
        
        .stat-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
            color: white;
            margin-bottom: 15px;
            box-shadow: 0 5px 15px rgba(108, 99, 255, 0.3);
        }
        
        .stat-card.warning .stat-icon {
            background: linear-gradient(135deg, var(--warning) 0%, #ff8c00 100%);
            box-shadow: 0 5px 15px rgba(255, 193, 7, 0.3);
        }
        
        .stat-card.danger .stat-icon {
            background: linear-gradient(135deg, var(--danger) 0%, #b02a37 100%);
            box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
        }
        
        .stat-card.success .stat-icon {
            background: linear-gradient(135deg, var(--success) 0%, #1e7e34 100%);
            box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
        }
        
        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
            transition: all 0.4s ease;
            overflow: hidden;
        }
        
        .card:hover {
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }
        
        .card-header {
            background: white;
            border-bottom: 1px solid #f1f1f1;
            padding: 20px 25px;
            border-radius: 20px 20px 0 0 !important;
            font-weight: 600;
            font-size: 18px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        
        .filters-container {
            background: #f8f9fa;
            padding: 20px;
            border-bottom: 1px solid #eee;
            border-radius: 0 0 20px 20px;
        }
        
        .filter-toggle {
            display: flex;
            align-items: center;
            justify-content: space-between;
            cursor: pointer;
            padding: 10px 15px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            margin-bottom: 15px;
        }
        
        .filter-toggle h6 {
            margin: 0;
            color: var(--primary);
            font-weight: 600;
        }
        
        .filter-content {
            display: none;
            padding: 15px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }
        
        .filter-content.active {
            display: block;
        }
        
        .filter-row {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            align-items: center;
        }
        
        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 10px;
            min-width: 200px;
        }
        
        .filter-label {
            font-weight: 600;
            color: #495057;
            white-space: nowrap;
            margin-bottom: 5px;
        }
        
        .filter-actions {
            display: flex;
            gap: 10px;
            align-items: flex-end;
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
            background: #f8f9fa;
            padding: 15px;
            border-bottom: 2px solid #e9ecef;
        }
        
        .table td {
            padding: 15px;
            vertical-align: middle;
            border-color: #f1f1f1;
        }
        
        .table tr {
            transition: all 0.3s ease;
        }
        
        .table tr:hover {
            background-color: #f8fafc;
            transform: translateX(5px);
        }
        
        .badge-plan {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .badge-basico {
            background: linear-gradient(135deg, rgba(108, 99, 255, 0.15) 0%, rgba(108, 99, 255, 0.05) 100%);
            color: var(--primary);
            border: 1px solid rgba(108, 99, 255, 0.2);
        }
        
        .badge-profesional {
            background: linear-gradient(135deg, rgba(255, 193, 7, 0.15) 0%, rgba(255, 193, 7, 0.05) 100%);
            color: var(--warning);
            border: 1px solid rgba(255, 193, 7, 0.2);
        }
        
        .badge-empresa {
            background: linear-gradient(135deg, rgba(40, 167, 69, 0.15) 0%, rgba(40, 167, 69, 0.05) 100%);
            color: var(--success);
            border: 1px solid rgba(40, 167, 69, 0.2);
        }
        
        .btn-action {
            width: 38px;
            height: 38px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }
        
        .btn-edit {
            background: linear-gradient(135deg, rgba(58, 134, 255, 0.15) 0%, rgba(58, 134, 255, 0.05) 100%);
            color: #3a86ff;
            border: 1px solid rgba(58, 134, 255, 0.2);
        }
        
        .btn-edit:hover {
            background: #3a86ff;
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(58, 134, 255, 0.3);
        }
        
        .btn-delete {
            background: linear-gradient(135deg, rgba(220, 53, 69, 0.15) 0%, rgba(220, 53, 69, 0.05) 100%);
            color: var(--danger);
            border: 1px solid rgba(220, 53, 69, 0.2);
        }
        
        .btn-delete:hover {
            background: var(--danger);
            color: white;
            transform: translateY(-3px);
            box-shadow: 0 6px 12px rgba(220, 53, 69, 0.3);
        }
        
        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #fff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        
        .progress {
            height: 10px;
            border-radius: 10px;
            background: #f1f1f1;
            overflow: hidden;
        }
        
        .progress-bar {
            border-radius: 10px;
        }
        
        .subscription-days {
            font-weight: 700;
            font-size: 14px;
        }
        
        .days-warning {
            color: var(--warning);
        }
        
        .days-danger {
            color: var(--danger);
        }
        
        .days-success {
            color: var(--success);
        }
        
        .modal-content {
            border: none;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }
        
        .modal-header {
            border-bottom: 1px solid #f1f1f1;
            padding: 20px 25px;
            background: linear-gradient(135deg, #f8f9fa 0%, #f1f3f5 100%);
        }
        
        .modal-footer {
            border-top: 1px solid #f1f1f1;
            padding: 20px 25px;
        }
        
        .form-control, .form-select {
            border-radius: 12px;
            padding: 12px 18px;
            border: 1px solid #e1e1e1;
            transition: all 0.3s ease;
            font-size: 15px;
        }
        
        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(108, 99, 255, 0.15);
        }
        
        .btn-premium {
            background: linear-gradient(135deg, var(--primary), var(--secondary));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 25px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(108, 99, 255, 0.3);
        }
        
        .btn-premium:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(108, 99, 255, 0.4);
            color: white;
        }
        
        .plan-card {
            border: 2px solid #f1f1f1;
            border-radius: 15px;
            padding: 20px;
            transition: all 0.3s ease;
            text-align: center;
            cursor: pointer;
        }
        
        .plan-card:hover, .plan-card.selected {
            border-color: var(--primary);
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(108, 99, 255, 0.1);
        }
        
        .plan-card.selected {
            background: linear-gradient(135deg, rgba(108, 99, 255, 0.05) 0%, rgba(255, 101, 132, 0.05) 100%);
        }
        
        .duration-badge {
            display: inline-block;
            padding: 6px 12px;
            border-radius: 20px;
            background: rgba(108, 99, 255, 0.1);
            color: var(--primary);
            font-weight: 600;
            font-size: 12px;
            margin: 5px;
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .duration-badge:hover, .duration-badge.selected {
            background: var(--primary);
            color: white;
        }
        
        @media (max-width: 992px) {
            .sidebar {
                left: -280px;
            }
            
            .sidebar.active {
                left: 0;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .navbar-admin {
                left: 0;
            }
            
            .sidebar-overlay {
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(0, 0, 0, 0.5);
                z-index: 999;
            }
            
            .sidebar-overlay.active {
                display: block;
            }
            
            .filter-row {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .filter-group {
                width: 100%;
            }
        }
        
        .floating-notification {
            position: fixed;
            bottom: 30px;
            right: 30px;
            background: white;
            border-radius: 15px;
            padding: 15px 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
            display: flex;
            align-items: center;
            z-index: 1000;
            transform: translateY(100px);
            opacity: 0;
            transition: all 0.5s ease;
        }
        
        .floating-notification.show {
            transform: translateY(0);
            opacity: 1;
        }
        
        .notification-icon {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: var(--success);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            font-size: 18px;
        }
        
        .search-box {
            position: relative;
            max-width: 300px;
        }
        
        .search-box .form-control {
            border-radius: 50px;
            padding-left: 45px;
        }
        
        .search-box i {
            position: absolute;
            left: 18px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }
        
        .stats-change {
            font-size: 13px;
            font-weight: 600;
            display: flex;
            align-items: center;
        }
        
        .stats-change.positive {
            color: var(--success);
        }
        
        .stats-change.negative {
            color: var(--danger);
        }
        
        .form-check-input:checked {
            background-color: var(--primary);
            border-color: var(--primary);
        }
        
        .btn-filter {
            background: rgba(108, 99, 255, 0.1);
            color: var(--primary);
            border: 1px solid rgba(108, 99, 255, 0.2);
            border-radius: 8px;
            padding: 8px 15px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-filter:hover {
            background: var(--primary);
            color: white;
        }
        
        .btn-filter-reset {
            background: rgba(108, 117, 125, 0.1);
            color: #6c757d;
            border: 1px solid rgba(108, 117, 125, 0.2);
            border-radius: 8px;
            padding: 8px 15px;
            font-weight: 600;
            transition: all 0.3s ease;
        }
        
        .btn-filter-reset:hover {
            background: #6c757d;
            color: white;
        }
    </style>
{% endblock %}

{% block content %}
    <!-- Sidebar Overlay -->
    <div class="sidebar-overlay"></div>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-brand">
            <h4 class="text-white mb-0">TurNow Admin</h4>
            <p class="text-white-50 small mb-0">Panel de Administración Premium</p>
        </div>
        
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link active" href="#">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-users"></i> Usuarios
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-concierge-bell"></i> Servicios
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-credit-card"></i> Suscripciones
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-chart-bar"></i> Reportes
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">
                    <i class="fas fa-cog"></i> Configuración
                </a>
            </li>
        </ul>
    </div>

    <!-- Navbar -->
    <nav class="navbar-admin">
        <div class="d-flex align-items-center">
            <button class="btn btn-sm btn-outline-primary d-lg-none me-3" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <h5 class="mb-0">Dashboard Administrador</h5>
        </div>
        
        <div class="navbar-actions">
            <div class="navbar-user">
                <img src="https://ui-avatars.com/api/?name=Admin+User&background=6c63ff&color=fff" alt="Admin">
                <span>Administrador</span>
            </div>
            <a href="{{ path('app_logout') }}" class="btn-logout">
                <i class="fas fa-sign-out-alt me-1"></i>Cerrar Sesión
            </a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Statistics Cards -->
        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="stat-card premium">
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <h6 class="text-muted">Usuarios Totales</h6>
                        <h3 class="mb-0">{{ usuarios|length }}</h3>
                        <div class="stats-change positive">
                            <i class="fas fa-arrow-up me-1"></i> 5.2% este mes
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card warning">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div>
                        <h6 class="text-muted">Suscripciones Próximas a Vencer</h6>
                        <h3 class="mb-0">{{ suscripciones_proximas_vencer|length }}</h3>
                        <div class="stats-change negative">
                            <i class="fas fa-arrow-up me-1"></i> 2.1% esta semana
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card danger">
                    <div class="stat-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div>
                        <h6 class="text-muted">Suscripciones Vencidas</h6>
                        <h3 class="mb-0">{{ suscripciones_vencidas|length }}</h3>
                        <div class="stats-change positive">
                            <i class="fas fa-arrow-down me-1"></i> 3.7% esta semana
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card success">
                    <div class="stat-icon">
                        <i class="fas fa-concierge-bell"></i>
                    </div>
                    <div>
                        <h6 class="text-muted">Servicios Activos</h6>
                        <h3 class="mb-0">{{ total_servicios }}</h3>
                        <div class="stats-change positive">
                            <i class="fas fa-arrow-up me-1"></i> 8.5% este mes
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Table -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Gestión de Usuarios</h5>
                <div>
                    <button class="btn btn-premium" data-bs-toggle="modal" data-bs-target="#addUserModal">
                        <i class="fas fa-plus me-2"></i>Nuevo Usuario
                    </button>
                </div>
            </div>
            
            <!-- Filters Container -->
            <div class="filters-container">
                <div class="filter-toggle" id="filterToggle">
                    <h6><i class="fas fa-filter me-2"></i>Filtros de Búsqueda</h6>
                    <i class="fas fa-chevron-down"></i>
                </div>
                
                <div class="filter-content" id="filterContent">
                    <div class="filter-row">
                        <div class="filter-group">
                            <label class="filter-label">Buscar por nombre o email</label>
                            <div class="search-box">
                                <i class="fas fa-search"></i>
                                <input type="text" class="form-control" id="searchUsers" placeholder="Buscar usuarios...">
                            </div>
                        </div>
                        
                        <div class="filter-group">
                            <label class="filter-label">Estado de suscripción</label>
                            <div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input filter-checkbox" type="checkbox" id="filterActive" value="activa" checked>
                                    <label class="form-check-label" for="filterActive">Activas</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input filter-checkbox" type="checkbox" id="filterExpiring" value="proxima_vencer" checked>
                                    <label class="form-check-label" for="filterExpiring">Próximas a vencer</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input filter-checkbox" type="checkbox" id="filterExpired" value="vencida" checked>
                                    <label class="form-check-label" for="filterExpired">Vencidas</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input filter-checkbox" type="checkbox" id="filterInactive" value="inactiva" checked>
                                    <label class="form-check-label" for="filterInactive">Inactivas</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="filter-group">
