{% block javascript %}
    {{ parent() }}
    <script>
        // Toggle sidebar on mobile
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('active');
            document.querySelector('.sidebar-overlay').classList.toggle('active');
        });
        
        // Close sidebar when clicking overlay
        document.querySelector('.sidebar-overlay').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.remove('active');
            this.classList.remove('active');
        });
        
        // Toggle filters
        document.getElementById('filterToggle').addEventListener('click', function() {
            document.getElementById('filterContent').classList.toggle('active');
            const icon = this.querySelector('i.fa-chevron-down');
            icon.classList.toggle('fa-chevron-down');
            icon.classList.toggle('fa-chevron-up');
        });
        
        // Plan selection in modals
        document.querySelectorAll('.plan-card').forEach(card => {
            card.addEventListener('click', function() {
                // Remove selected class from all cards in the same modal
                this.closest('.modal-body').querySelectorAll('.plan-card').forEach(c => {
                    c.classList.remove('selected');
                });
                
                // Add selected class to clicked card
                this.classList.add('selected');
                
                // Update hidden input value
                const plan = this.getAttribute('data-plan');
                const hiddenInput = this.closest('.modal-body').querySelector('input[type="hidden"][name="plan"]');
                console.log('Buscando input con selector:', 'input[type="hidden"][name="plan"]');
                console.log('Input encontrado:', hiddenInput);
                if (hiddenInput) {
                    console.log('Input encontrado:', hiddenInput.name, 'Valor:', plan);
                    hiddenInput.value = plan;
                }
            });
        });
        
        // Duration selection
        document.querySelectorAll('.duration-badge').forEach(badge => {
            badge.addEventListener('click', function() {
                console.log('Badge clicked:', this.getAttribute('data-duration'));
                // Remove selected class from all badges in the same container
                this.parentElement.querySelectorAll('.duration-badge').forEach(b => {
                    b.classList.remove('selected');
                });
                
                // Add selected class to clicked badge
                this.classList.add('selected');
                
                // Update hidden input value
                const duration = this.getAttribute('data-duration');
                const hiddenInput = this.closest('.modal-body').querySelector('input[type="hidden"][name*="duracion"]');
                console.log('Buscando input con selector:', 'input[type="hidden"][name*="duracion"]');
                console.log('Input encontrado:', hiddenInput);
                if (hiddenInput) {
                    console.log('Input encontrado:', hiddenInput.name, 'Valor:', duration);
                    hiddenInput.value = duration;
                }
            });
        });
        
        // Show notification function
        function showNotification(message) {
            const notification = document.getElementById('successNotification');
            document.getElementById('notificationMessage').textContent = message;
            notification.classList.add('show');
            
            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }
        
        // Edit user button click handler
        document.querySelectorAll('.btn-edit').forEach(btn => {
            btn.addEventListener('click', function() {
                const userId = this.getAttribute('data-user-id');
                const row = this.closest('tr');
                const userName = row.querySelector('h6').textContent;
                const userEmail = row.querySelector('.text-muted').textContent;
                
                // Set form action
                document.getElementById('editUserForm').action = `/admin/usuario/${userId}/editar`;
                document.getElementById('editUserId').value = userId;
                
                // Set user data
                document.getElementById('editUserName').value = userName;
                document.getElementById('editUserEmail').value = userEmail;
                
                // Get current plan from the row
                const planBadge = row.querySelector('.badge-plan');
                let currentPlan = 'none';
                if (planBadge) {
                    if (planBadge.classList.contains('badge-basico')) currentPlan = 'basico';
                    else if (planBadge.classList.contains('badge-profesional')) currentPlan = 'profesional';
                    else if (planBadge.classList.contains('badge-empresa')) currentPlan = 'empresa';
                }
                
                // Select current plan in modal
                document.querySelectorAll('#editUserModal .plan-card').forEach(card => {
                    card.classList.remove('selected');
                    if (card.getAttribute('data-plan') === currentPlan) {
                        card.classList.add('selected');
                        document.getElementById('editSelectedPlan').value = currentPlan;
                    }
                });
                
                // Get subscription info
                const statusBadge = row.querySelector('.bg-success, .bg-warning, .bg-danger, .bg-secondary');
                const daysElement = row.querySelector('.subscription-days');
                
                let statusText = 'Estado desconocido';
                let daysText = 'N/A';
                let expirationDate = 'Fecha desconocida';
                
                if (statusBadge) {
                    statusText = statusBadge.textContent.trim();
                }
                
                if (daysElement && daysElement.textContent !== 'N/A') {
                    daysText = daysElement.textContent.trim();
                    // Calculate expiration date (simplified)
                    const days = parseInt(daysText);
                    if (!isNaN(days)) {
                        const today = new Date();
                        today.setDate(today.getDate() + days);
                        expirationDate = today.toLocaleDateString();
                    }
                }
                
                // Display current plan info
                document.getElementById('currentPlanInfo').innerHTML = `
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-0">Plan ${currentPlan.charAt(0).toUpperCase() + currentPlan.slice(1)}</h6>
                            <small class="text-muted">${statusText}</small>
                        </div>
                        <div class="text-end">
                            <div class="fw-bold ${daysText.includes('N/A') ? 'text-secondary' : 'text-warning'}">${daysText}</div>
                            <small class="text-muted">Vence el ${expirationDate}</small>
                        </div>
                    </div>
                `;
                
                // Show the modal
                const editModal = new bootstrap.Modal(document.getElementById('editUserModal'));
                editModal.show();
            });
        });
        
        // Delete user button click handler
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', function() {
                const userId = this.getAttribute('data-user-id');
                
                // Set delete URL
                document.getElementById('confirmDeleteBtn').href = `/admin/usuario/${userId}/eliminar`;
                
                // Show the modal
                const deleteModal = new bootstrap.Modal(document.getElementById('deleteUserModal'));
                deleteModal.show();
            });
        });
        
        // Filter functionality
        function applyFilters() {
            const searchText = document.getElementById('searchUsers').value.toLowerCase();
            
            // Get selected status filters
            const statusFilters = [];
            document.querySelectorAll('.filter-checkbox[value="activa"], .filter-checkbox[value="proxima_vencer"], .filter-checkbox[value="vencida"], .filter-checkbox[value="inactiva"]').forEach(checkbox => {
                if (checkbox.checked) {
                    statusFilters.push(checkbox.value);
                }
            });
            
            // Get selected plan filters
            const planFilters = [];
            document.querySelectorAll('.filter-checkbox[value="basico"], .filter-checkbox[value="profesional"], .filter-checkbox[value="empresa"], .filter-checkbox[value="none"]').forEach(checkbox => {
                if (checkbox.checked) {
                    planFilters.push(checkbox.value);
                }
            });
            
            document.querySelectorAll('#usersTable tbody tr').forEach(row => {
                const userName = row.querySelector('h6').textContent.toLowerCase();
                const userEmail = row.querySelector('.text-muted').textContent.toLowerCase();
                const status = row.getAttribute('data-status');
                const plan = row.getAttribute('data-plan');
                
                // Text search
                const matchesSearch = searchText === '' || userName.includes(searchText) || userEmail.includes(searchText);
                
                // Status filter
                const matchesStatus = statusFilters.length === 0 || statusFilters.includes(status);
                
                // Plan filter
                const matchesPlan = planFilters.length === 0 || planFilters.includes(plan);
                
                // Show or hide row based on filters
                if (matchesSearch && matchesStatus && matchesPlan) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
        
        // Apply filters button
        document.getElementById('applyFilters').addEventListener('click', applyFilters);
        
        // Reset filters button
        document.getElementById('resetFilters').addEventListener('click', function() {
            // Reset search
            document.getElementById('searchUsers').value = '';
            
            // Check all filter checkboxes
            document.querySelectorAll('.filter-checkbox').forEach(checkbox => {
                checkbox.checked = true;
            });
            
            // Apply reset filters
            applyFilters();
        });
        
        // Initialize with all users visible
        // Password validation
        document.getElementById('userPassword').addEventListener('input', function() {
            const password = this.value;
            const minLength = 6;
            
            if (password.length < minLength) {
                this.setCustomValidity(`La contraseña debe tener al menos ${minLength} caracteres`);
            } else {
                this.setCustomValidity('');
            }
        });
        
        document.addEventListener('DOMContentLoaded', function() {
            applyFilters();
        });
        
        // Initialize tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
