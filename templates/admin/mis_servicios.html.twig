{% extends 'base.html.twig' %}

{% block title %}Mis Servicios - TurNow{% endblock %}

{% block css %}
{{ parent() }}
<style>
    .services-container {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        min-height: 100vh;
        padding: 2rem;
    }
    
    .services-header {
        background: white;
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        margin-bottom: 2rem;
    }
    
    .service-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        transition: all 0.3s ease;
        height: 100%;
        border: none;
    }
    
    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0,0,0,0.15);
    }
    
    .service-banner {
        height: 160px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        background-size: cover;
        background-position: center;
        border-top-left-radius: 15px;
        border-top-right-radius: 15px;
    }
    
    .service-content {
        padding: 1.5rem;
    }
    
    .service-title {
        font-size: 1.2rem;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 0.75rem;
    }
    
    .service-description {
        color: #6c757d;
        line-height: 1.5;
        margin-bottom: 1rem;
        font-size: 0.9rem;
    }
    
    .service-stats {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: auto;
    }
    
    .stat-badge {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
    }
    
    .view-btn {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
        color: white;
        border: none;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .view-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(67, 233, 123, 0.3);
        color: white;
    }
    
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    }
</style>
{% endblock %}

{% block content %}
<div class="services-container">
    <div class="services-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-1">
                    <i class="fas fa-calendar me-2 text-primary"></i>
                    Mis Servicios
                </h1>
                <p class="text-muted mb-0">Gestiona todas tus páginas de servicios</p>
            </div>
            <a href="{{ path('admin_servicios') }}" class="btn btn-premium">
                <i class="fas fa-plus me-2"></i>Nuevo Servicio
            </a>
        </div>
    </div>

    {% if servicios|length > 0 %}
        <div class="row">
            {% for servicio in servicios %}
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-banner" {% if servicio.bannerUrl %}style="background-image: url('{{ servicio.bannerUrl }}')"{% endif %}>
                        {% if not servicio.bannerUrl %}
                        <div style="height: 100%; display: flex; align-items: center; justify-content: center; color: white;">
                            <i class="fas fa-image fa-2x"></i>
                        </div>
                        {% endif %}
                    </div>
                    
                    <div class="service-content">
                        <h3 class="service-title">{{ servicio.nombre }}</h3>
                        <p class="service-description">
                            {{ servicio.descripcion|length > 120 ? servicio.descripcion|slice(0, 120) ~ '...' : servicio.descripcion }}
                        </p>
                        
                        <div class="service-stats">
                            <span class="stat-badge">
                                <i class="fas fa-clock me-1"></i>
                                {{ servicio.turnos|length }} turnos
                            </span>
                            <a href="{{ path('servicio_publico', {'id': servicio.id}) }}" 
                               class="view-btn" 
                               target="_blank">
                                <i class="fas fa-eye me-1"></i>Ver Página
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <i class="fas fa-calendar-plus fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">No tienes servicios creados</h3>
            <p class="text-muted mb-4">Comienza creando tu primer servicio para recibir turnos</p>
            <a href="{{ path('admin_servicios') }}" class="btn btn-premium btn-lg">
                <i class="fas fa-plus me-2"></i>Crear Primer Servicio
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}